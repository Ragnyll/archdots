#! /bin/sh

feh --bg-scale ~/Pictures/wallpapers/anime/kaneki.jpg
compton &
~/.config/polybar/launch.sh &
sxhkd &

CONNECTED_MONITORS=$(xrandr --listmonitors | sed '1 d' | awk 'NF>1{print $NF}')


monitor1='DP1'
monitor2='eDP1'

bspc monitor $monitor1 -d $monitor1/1 $monitor1/2 $monitor1/3
bspc monitor $monitor2 -d $monitor2/4 $monitor2/5 $monitor2/6

bspc config border_width         2
bspc config window_gap          12


bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config click_to_focus       true

# set defaults
LAPTOP_DISPLAY_NAME="eDP1"
xrandr --output $LAPTOP_DISPLAY_NAME --brightness 0.70
